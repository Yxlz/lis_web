<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<!-- <link rel="import" href="../app.html"> -->
<link rel="stylesheet" type="text/css" href="../statics/css/role.css" />
</head>
<body>
	<div class="panel panel-primary leftRolePanel">
		<div class="panel-heading">角色列表</div>
		<div class="toolbar_role">
			<div class="btn-group btn-group-sm  pull-left">
				<button type="button" class="btn btn-default btn-noborder"
					onClick="openAddRoleWin()">
					新增<span class="glyphicon glyphicon-plus"></span>
				</button>
				<button type="button" class="btn btn-default btn-noborder"
					onClick="openEditRoleWin()">
					编辑 <span class="glyphicon glyphicon-pencil"></span>
				</button>
				<button type="button" class="btn btn-default btn-noborder"
					onClick="deleteRole()">
					删除 <span class="glyphicon glyphicon-remove"></span>
				</button>
			</div>
			<div class="btn-group btn-group-sm  pull-right">
				<button type="button" class="btn btn-default btn-noborder"
					onClick="refreshRowTable()">
					<span class="glyphicon glyphicon-refresh"></span>
				</button>
			</div>
		</div>
		<div class="panel-body">
			<table id="tb_roleInfo"></table>
		</div>
	</div>
	<div class="panel panel-primary middleRolePanel">
		<div class="panel-heading">已分配权限</div>
		<div class="panel-body">
			<div class="btn-toolbar">
				<div class="btn-group btn-group-sm  pull-left">
					<button type="button" class="btn btn-danger"
						onClick="deleteRoleRight()">
						删除权限<span class="glyphicon glyphicon-arrow-right"></span>
					</button>
				</div>
				<div class="btn-group btn-group-sm  pull-right">
					<button type="button" class="btn btn-default btn-noborder"
						onClick="refreshRoleRightTree()">
						<span class="glyphicon glyphicon-refresh"></span>
					</button>
				</div>
			</div>
			<div id="haveRightTree"></div>
		</div>
	</div>
	<div class="panel panel-primary rightRolePanel">
		<div class="panel-heading">权限列表</div>
		<div class="panel-body">
			<div class="btn-toolbar">
				<div class="btn-group btn-group-sm  pull-left">
					<button type="button" class="btn btn-success"
						onClick="addRoleRight()">
						添加权限<span class="glyphicon glyphicon-arrow-left"></span>
					</button>
				</div>
				<div class="btn-group btn-group-sm  pull-right">
					<button type="button" class="btn btn-default btn-noborder"
						onClick="refreshRoleRightTree()">
						<span class="glyphicon glyphicon-refresh"></span>
					</button>
				</div>
			</div>
			<div id="notHaveRightTree"></div>
		</div>
	</div>
	<!-- 添加角色窗口 -->
	<div class="modal fade" id="addRoleWin" role="dialog" tabindex="-1" aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal"
						aria-hidden="true">&times;</button>
					<h4 class="modal-title" id="myModalLabel">添加角色</h4>
				</div>
				<div class="modal-body">
					<form id="addRoleForm" role="form" class="form-horizontal">
						<div class="form-group">
							<label for="roleName" class="col-sm-4 control-label">角色名称:</label>
							<div class="col-sm-8">
								<input type="text" class="form-control" name="roleName"
									id="roleName" placeholder="请输入名字">
							</div>
						</div>
						<div class="form-group">
							<label for="roleDescription" class="col-sm-4 control-label">角色描述:</label>
							<div class="col-sm-8">
								<input type="text" class="form-control" name="roleDescription"
									id="roleDescription" placeholder="请输入角色描述">
							</div>
						</div>
						<input type="text" id="id" name="id" hidden="true" readonly="true">
						<div class="modal-footer">
							<button type="button" class="btn btn-default"
								data-dismiss="modal">关闭</button>
							<button type="button" class="btn btn-primary"
								onClick="submitRoleForm()">提交更改</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</body>
<script type="text/javascript" src="../statics/js/modules/role.js"></script>
</html>